<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0" metadata-complete="true">

	<display-name>
		Archetype Created Web Application
	</display-name>

	<!-- 字符编码转换拦截器配置 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>com.uxuexi.core.web.filter.EncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>

	<!-- 使用spring-websocket，注意:此Servlet定义的路径仅用于处理websocket请求-->
	<servlet>
        <servlet-name>SpringWebsocket</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:spring-websocket.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
		<servlet-name>SpringWebsocket</servlet-name>
		<url-pattern>/websocket/*</url-pattern>
		<url-pattern>/basicinfowebsocket/*</url-pattern>
		<url-pattern>/simpleinfowebsocket/*</url-pattern>
		<url-pattern>/visainfowebsocket/*</url-pattern>
		<url-pattern>/vcodewebsocket/*</url-pattern>
		<url-pattern>/sockjs/websocket/*</url-pattern>
		<url-pattern>/simplesendinfosocket/*</url-pattern>
	</servlet-mapping>


	<!-- 扫描注入@相关的包 -->
	<filter>
		<filter-name>scanFile</filter-name>
		<filter-class>com.uxuexi.core.web.filter.ScanFilter</filter-class>
		<init-param>
			<param-name>scanFiles</param-name>
			<param-value>
			</param-value>
		</init-param>
	</filter>

	<!-- Nutz核心拦截器配置 -->
	<filter>
		<filter-name>nutz</filter-name>
		<filter-class>org.nutz.mvc.NutFilter</filter-class>
		<init-param>
			<param-name>modules</param-name>
			<param-value>com.juyo.visa.MainModule</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>nutz</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>

	<!-- 错误页面配置 -->
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/common/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/common/500.jsp</location>
	</error-page>

	
</web-app>
